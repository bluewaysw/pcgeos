_ParseWBFixedArg	<source>, drl, drh, regargs, <rnduwbf>

ifnb	<dest>
	cmp	drl, 80h
    ifdif	drh, <dest>
	;;
	;; We do this here so that if the fraction is actually part of the
	;; dest register (eg: cl and cx) we won't nuke the fraction before
	;; we have a chance to test it.
	;;
	mov	dest, drh
    endif
	jb	done
	add	dest, 1
else
	cmp	drl, 80h
	jb	done
	add	drh, 1
endif
done:
endm

