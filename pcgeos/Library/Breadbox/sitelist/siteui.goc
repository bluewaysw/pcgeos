void IGetTextLimited(optr textObj, char *buffer, word limit)
{
    MemHandle mem ;

    buffer[0] = '\0' ;
    mem = @call textObj::MSG_VIS_TEXT_GET_ALL_BLOCK(0) ;
    if ((mem) && (limit))  {
        MemLock(mem) ;
        strncpy(buffer, MemDeref(mem), limit-1) ;
        MemUnlock(mem) ;
        MemFree(mem) ;
    }
}

