    T_siteEntry entry ;

    buffer[0] = '\0' ;
    if (pself->SSI_currentSite)  {
        entry = SiteEntryLock(pself->SSI_list, pself->SSI_currentSite) ;
        SiteFieldGet(entry, SITE_FIELD_NAME, buffer, limit) ;
        SiteEntryUnlock(entry) ;
