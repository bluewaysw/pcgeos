 *
 * STRATEGY:	    
 *
 * REVISION HISTORY:
 *	Name	Date		Description
 *	----	----		-----------
 *	ardeb	4/10/93		Initial Revision
 *
 ***********************************************************************/
static Boolean _pascal
PFIGCheckFontInListCallback(optr  	itemGroup,
			      optr  	item,
			      void  	*cbData)    /* Addr of fid */
{
