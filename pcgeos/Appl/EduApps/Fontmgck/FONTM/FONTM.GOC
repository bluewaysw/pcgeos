     * paste the thing, PasteCommon returns ClipboardQuickNotifyFlags to pass to
     * ClipboardEndQuickTransfer
     */
    ClipboardEndQuickTransfer(PasteCommon(CIF_QUICK));
    retVal->flags = MRF_PROCESSED;	/* this event processed */
}

