PowerGetStatusType	etype	word
PGST_POWER_ON_WARNINGS		enum	PowerGetStatusType
	; ax = PowerWarnings
	; bx = mask of PowerWarnings flags supported
PGST_POLL_WARNINGS		enum	PowerGetStatusType
