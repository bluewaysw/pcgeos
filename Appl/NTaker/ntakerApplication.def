NTakerApplicationClass class	GenApplicationClass

NTakerToolbarStates	record
	NTS_SHOW_TOOLBAR:1
	:15
NTakerToolbarStates	end
INTRODUCTORY_TOOLBAR_STATES = 0
BEGINNING_TOOLBAR_STATES = 0
INTERMEDIATE_TOOLBAR_STATES = BEGINNING_TOOLBAR_STATES
ADVANCED_TOOLBAR_STATES = INTERMEDIATE_TOOLBAR_STATES or mask NTS_SHOW_TOOLBAR

DEFAULT_TOOLBAR_STATES = ADVANCED_TOOLBAR_STATES

NTakerFeatures	record
	NF_CARD_LIST:1
	NF_KEYWORDS:1
	NF_SEARCH:1
	NF_MISC:1
	NF_TOOLS:1
	NF_CREATE_TOPICS:1
	:10
NTakerFeatures	end

INTRODUCTORY_FEATURES = 0
BEGINNING_FEATURES = INTRODUCTORY_FEATURES or mask NF_KEYWORDS or mask NF_SEARCH or mask NF_MISC or mask NF_CARD_LIST
INTERMEDIATE_FEATURES = BEGINNING_FEATURES or mask NF_CREATE_TOPICS
ADVANCED_FEATURES = INTERMEDIATE_FEATURES or mask NF_TOOLS

DEFAULT_FEATURES = ADVANCED_FEATURES

MSG_NTAKER_APPLICATION_CHANGE_USER_LEVEL	method
MSG_NTAKER_APPLICATION_CANCEL_USER_LEVEL	method
MSG_NTAKER_APPLICATION_SET_USER_LEVEL		method
MSG_NTAKER_APPLICATION_INITIATE_FINE_TUNE	method
MSG_NTAKER_APPLICATION_FINE_TUNE		method
MSG_NTAKER_APPLICATION_UPDATE_TOOLBARS		method
MSG_NTAKER_APPLICATION_SET_TOOLBAR_STATE	method
MSG_NTAKER_APPLICATION_TOOLBAR_VISIBILITY	method
MSG_NTAKER_APPLICATION_QUERY_RESET_OPTIONS	message
MSG_NTAKER_APPLICATION_USER_LEVEL_STATUS	message

	NAI_toolbarStates	NTakerToolbarStates

NTakerApplicationClass endc

