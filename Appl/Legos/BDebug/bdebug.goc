 *********************************************************************/
@method BDProcessClass, MSG_BDP_LAUNCH_BASTEST
{
    word	error;

#if ERROR_CHECK
#define BASTEST _TEXT("basteste.geo")
#else
#define BASTEST _TEXT("bastest.geo")
#endif

    UserLoadApplication
	(ALF_SEND_LAUNCH_REQUEST_TO_UI_TO_HANDLE,
	 0, 0, BASTEST, SP_APPLICATION, &error);
    
}

