#ifndef QuestionBox
#define QuestionBox(txt)  \
		UserStandardDialog ( (char *)0,(char *)0,(char *)0,(char *)0,txt, \
		(( CDT_QUESTION << CDBF_DIALOG_TYPE_OFFSET) | \
		 ( GIT_AFFIRMATION << CDBF_INTERACTION_TYPE_OFFSET)) );
