    for (i = 0; i < ObjArrayGetLength(&obj); ++i) {
      ObjArrayGet(&obj, i, &obj2, xref);
      if (isArray(&params))
	ObjArrayGet(&params, i, &params2, xref);
      else
	initNull(&params2);
      if (isName(&obj2)) {
	str = StreamMakeFilter(str, getName(&obj2), &params2, xref);
      } else {
	  EC_WARNING(-1);
