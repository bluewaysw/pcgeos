//  if (!(hdrBuf[i+5] >= '0' && hdrBuf[i+5] <= '9') || version > pdfVersionNum) {
//    error(getPos(), "PDF version %s -- xpdf supports version %s"
//	  " (continuing anyway)", p, pdfVersion);
//    EC_WARNING(-1);
//    return gFalse;
//  }
  return gTrue;
}


