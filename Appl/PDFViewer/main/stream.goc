Stream *StreamAddFilters(Stream *str1, Obj *dict, XRef *xref) {
  Obj obj, obj2;
  Obj params, params2;
  Stream *str;
  short i;

  str = str1;
  ObjDictLookup(dict, "Filter", &obj, xref);
  if (isNull(&obj)) {
    ObjFree(&obj);
    ObjDictLookup(dict, "F", &obj, xref);
  }
  ObjDictLookup(dict, "DecodeParms", &params, xref);
  if (isNull(&params)) {
    ObjFree(&params);
    ObjDictLookup(dict, "DP", &params, xref);
