	@call OHEDate::MSG_DATE_INPUT_GET_DATE(&itemDate);

	vmbh = VMFind(vmfh, 0, sel+100);
	VMLock(vmfh, vmbh ,&mh);
	otherPtr = ChunkArrayAppendHandles(mh, ch, 0);
	strcpy(otherPtr->OS_data, dataStr);
	otherPtr->OS_date = itemDate;

	VMDirty(mh);
	VMUnlock(mh);

	VMClose(vmfh, 0);
	FilePopDir();

}

