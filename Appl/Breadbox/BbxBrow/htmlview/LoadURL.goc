/* for last minute abort, must match T_fetchEngineChild in URLFETCH.GOH */
typedef struct {
    ThreadHandle child ;
    Boolean isBusy ;
    Boolean isAbort ;
    SemaphoreHandle sem ;
    byte action ;
    NameToken url ;
    word loadMode ;
    HTMLFormDataHandle postData ;
    optr ackObject ;
    Message ackMessage ;
    dword extraData ;
    void *abortRoutine ;
    LoadProgressData loadProgressData;  /* loading progress data */
} T_fetchEngineChild ;
extern T_fetchEngineChild G_fetchChildren[];
