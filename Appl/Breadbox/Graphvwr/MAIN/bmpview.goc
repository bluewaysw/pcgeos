  MemHandle mem;
  word *selptr;
  BVFileAttr *filelist;
  word selection;

  if(BVFileList != 0)
  {
	mem = MemAlloc(BVFileNumber*2, 0, 0);
	selptr = MemLock(mem);
	selection = selptr[0];

	count = 0;
	while(count != BVFileNumber)
	{
	  selptr[count] = count;
	  count++;
	};

	@call BVDynFileList::MSG_GEN_ITEM_GROUP_SET_MULTIPLE_SELECTIONS(selptr, BVFileNumber);
