	  @send process::MSG_BV_FILE_SELECTED();
	else
	  if(BVFileNumber == 1)
	  {
		filelist = MemLock(BVFileList);
		if((filelist[selection].BVFA_type & FA_SUBDIR) == 0)
		  @send process::MSG_BV_FILE_SELECTED();
		MemUnlock(BVFileList);
	  };
  };
}

