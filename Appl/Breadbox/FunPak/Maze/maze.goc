@method MazePauseInterClass, MSG_VIS_DRAW
{
    Rectangle rect;

    @call oself::MSG_VIS_GET_BOUNDS(&rect) ;
    GrSaveState(gstate) ;
    GrSetLineWidth(gstate, MakeWWFixed(1.0)) ;
    GrSetLineColor(gstate, CF_INDEX, C_BLACK, 0, 0) ;
    GrSetAreaColor(gstate, CF_INDEX, C_WHITE, 0, 0) ;
    GrDrawRect(gstate,
        rect.R_left-1,
        rect.R_top-1,
        rect.R_right+2,
        rect.R_bottom+2) ;
    GrFillRect(gstate,
        rect.R_left-2,
        rect.R_top-2,
        rect.R_right+1,
        rect.R_bottom+1) ;
    GrDrawRect(gstate,
        rect.R_left-2,
        rect.R_top-2,
        rect.R_right+1,
        rect.R_bottom+1) ;
    GrRestoreState(gstate) ;

    @callsuper() ;
}
