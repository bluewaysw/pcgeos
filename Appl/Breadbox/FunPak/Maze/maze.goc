word ClearPlayerTrail()
{
    word i ;
    word r = 0;

    for (i=0; i<MAZE_BUFFER_SIZE; i++)
        if (maze[i] & MAZE_BIT_TRAVELED)  {
            r |= 1 ;
            maze[i] &= (~MAZE_BIT_TRAVELED) ;
        }

    return r ;
}
