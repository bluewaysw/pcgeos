void AppendNumToString(char *p_pos, optr string, word num)
{
    char *p_src ;
    word len ;

    MemLock(OptrToHandle(string)) ;
    p_src = LMemDeref(string) ;
    strcpy(p_pos, p_src) ;
    MemUnlock(OptrToHandle(string)) ;
    len = strlen(p_pos) ;
    convert_word_to_str(p_pos+len, num) ;
}
