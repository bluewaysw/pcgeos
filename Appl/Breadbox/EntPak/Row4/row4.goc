    if ((pos = row4_height[column]) != 0x7F)  {
        old = row4_field[pos] ;
        row4_field[pos] = player ;
        if (pos>=8)  {
            row4_height[column]-=8 ;
        } else {
            row4_height[column] = 0x7F ;
        }
    }

    return old ;
}
