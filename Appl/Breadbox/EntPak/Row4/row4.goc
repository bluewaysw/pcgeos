void ReplacePiece(byte column, byte old_piece)
{
    word pos ;

    if (old_piece != 0x7F)  {
        pos = row4_height[column] ;
        if (pos==0x7F)
            pos = column ;
        else
            pos += 8 ;
        row4_field[pos] = old_piece ;
        row4_height[column] = pos ;
    }
}
