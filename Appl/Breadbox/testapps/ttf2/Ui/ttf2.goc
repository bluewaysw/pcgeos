        goto Fail;
    }
 
/*    error = TT_Init_Kerning_Extension(engine);
    if(error) {
        _log("Fehler bei der Initialisierung des Kernings\r");
        goto Fail;
    }*/

    error = TT_Open_Face(engine, "DejaVu.ttf", &face);
