	if ( UserDoDialog(@IniFileBox) == IC_OK ) {
	/* allgemeine Informationen */
		mh = @call IniFileCategoryText::MSG_VIS_TEXT_GET_ALL_BLOCK(0);
		strcpy(entry.main.ini.kategorie,MemLock(mh));
		MemFree(mh);
		entry.instFlags = 0;
