    BmpFlipVertical(G_tempVMFile, &G_bitmapHandle);

	@send PAViewView::MSG_GEN_VIEW_REDRAW_CONTENT();

	@call application::MSG_GEN_APPLICATION_MARK_NOT_BUSY();
