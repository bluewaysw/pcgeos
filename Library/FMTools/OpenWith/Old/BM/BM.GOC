/*************************************************************************
 Laufwerk finden
 *************************************************************************/
DiskHandle GetDriveA(void)
{
  byte            firstDrive = 0;
  DiskHandle      dh = 0;

  if (DriveGetStatus(firstDrive) & DS_PRESENT)
  {
    dh = DiskRegisterDiskSilently(firstDrive);

    if (dh)
    {
      return dh;
    }
  }

  return NULL;
}

