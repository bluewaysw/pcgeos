         else
         {if (opts & SBC_ICON_AND_TEXT) ot |= SBC_ICON_AND_TEXT;}
      }
      @call SoftLauncherChoices::MSG_GEN_ITEM_GROUP_SET_SINGLE_SELECTION(ot, FALSE);

