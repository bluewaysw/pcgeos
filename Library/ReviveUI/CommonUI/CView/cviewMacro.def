; Macros used only for scrollbars.

NOARROWSHADOW	macro	line
	if	 _NO_SHADOWS_ON_SCROLL_ARROWS
line
	endif	;_NO_SHADOWS_ON_SCROLL_ARROWS
endm

ARROWSHADOW	macro	line
	if	not _NO_SHADOWS_ON_SCROLL_ARROWS
line
	endif	;not _NO_SHADOWS_ON_SCROLL_ARROWS
endm

