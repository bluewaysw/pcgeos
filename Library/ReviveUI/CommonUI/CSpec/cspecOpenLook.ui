}

PopupRefresh = GenTrigger {
	moniker = "Refresh";
	action = MSG_OL_WINDOW_REFRESH, "OLTPT_WINDOW";
}

PopupOwner = GenTrigger {
	moniker = "Owner?";
	action = MSG_OL_POPUP_OWNER, "OLTPT_WINDOW";
