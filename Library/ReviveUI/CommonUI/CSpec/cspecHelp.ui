visMoniker StandardHelpMoniker = list {
#if _WIZARDBA || _REDMOTIF
	SHSCText
#else
#if INCLUDE_SC_MONIKERS
	SHSCEntry,
#endif
#if INCLUDE_SM_MONIKERS
	SHSMEntry,
#endif
#if INCLUDE_CGA_MONIKERS
	SHSCGAEntry
#endif
#endif
}

#if _WIZARDBA
visMoniker SHSCText = 'H', "Help";
#endif
#if _REDMOTIF
visMoniker SHSCText = "Help";
#endif

#if !_REDMOTIF

#if INCLUDE_SC_MONIKERS
visMoniker SHSCEntry = {
	style = icon;
	size = standard;
	color = color4;
	aspectRatio = normal;
	cachedSize = 13, 12;
