#define ENTRY_GSTRING(bmap) \
	gstring { \
		GSBeginString | \
		byte	GR_DRAW_BITMAP_OPTR | \
		word	0, 0 | \
		optr	bmap | \
		GSEndString \
	}

#define BW_ENTRY_GSTRING(bmap) \
	gstring { \
		GSBeginString | \
		byte	GR_FILL_BITMAP_OPTR | \
		word	0, 0 | \
		optr	bmap | \
		GSEndString \
	}

#define SC_ENTRY_VALUES(bmap) \
	style = icon; \
	size = standard; \
	color = color4; \
	aspectRatio = normal; \
	cachedSize = 64, 40; \
	ENTRY_GSTRING(bmap)

#define SM_ENTRY_VALUES(bmap) \
	style = icon; \
	size = standard; \
	color = gray1; \
	aspectRatio = normal; \
	cachedSize = 64, 40; \
	BW_ENTRY_GSTRING(bmap)

#define SCGA_ENTRY_VALUES(bmap) \
	style = icon; \
	size = standard; \
	color = gray1; \
	aspectRatio = verySquished; \
	cachedSize = 64, 20; \
	BW_ENTRY_GSTRING(bmap)

