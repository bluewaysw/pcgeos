COMMENT @----------------------------------------------------------------------

	OL	code-line		OpenLook only
	MO	code-line		Motif only
	PMAN	code-line		PM only
	CUA	code-line		CUA only (IBMs CUA specification, which
						we implement to match PM.)

	OLS	code-line		OL style: OpenLook
	CUAS	code-line		CUA style: CUA, Motif, PM, or DM

    The following macros should normally not be used alone.  They are 
    intended for use with one of the single specific UI macros in order
    to achieve a "if-then-else" effect.
	NOT_DM	code-line		CUA style, except DM
	NOT_CUA	code-line		CUA style, except CUA
	NOT_MO	code-line		CUA style, except Motif and PM
	NOT_PM	code-line		everything except PM

	FUNCTION:
		Include a line of code based on OPEN_LOOK or MOTIF.
	ARGUMENTS:
		code line -- line of code

------------------------------------------------------------------------------@

;------------------------------------------------------------------------------
;	Single specific UI macros
;------------------------------------------------------------------------------

OL	macro	line
	if	_OPEN_LOOK
line
	endif
endm

MO	macro	line
	if	_MOTIF
line
	endif
endm

PMAN	macro	line
	if	_PM
line
	endif
endm

ISU	macro	line
	if	_ISUI
line
	endif
endm

CUA	macro	line
	if	_CUA
line
	endif
endm

MAC	macro	line
	if	_MAC
line
	endif
endm

JEDI	macro	line
	if	_JEDIMOTIF
line
	endif
endm

RUDY	macro	line
	if	_RUDY
line
	endif
endm

NRUDY	macro	line
	if	not _RUDY
line
	endif
endm

NKE	macro	line
	if	_NIKE
line
	endif
endm

ODIE	macro	line
	if	_ODIE
line
	endif
endm

;
; for some reason, we can't use DUI so we name this DOVE instead
;
DOVE	macro	line
	if	_DUI
line
	endif
endm


;------------------------------------------------------------------------------
;	Broad UI catagory macros
;------------------------------------------------------------------------------

OLS	macro	line
	if	_OL_STYLE
line
	endif
endm

CUAS	macro	line
	if	_CUA_STYLE
line
	endif
endm

;------------------------------------------------------------------------------
;	Broad UI catagory macros
;------------------------------------------------------------------------------

NOT_CUA	macro	line
	if	_CUA_STYLE and (not _CUA)
line
	endif
endm

NOT_MO	macro	line
	if	_CUA_STYLE and (not _MOTIF) and (not _PM)
line
	endif
endm

NOT_PM	macro	line
	if (not _PM)
line
	endif
endm

NOT_ODIE macro	line
	if (not _ODIE)
line
	endif
endm

NOT_DUI	macro	line
	if (not _DUI)
line
	endif
endm

;------------------------------------------------------------------------------
;	Feature Constant Macros
;------------------------------------------------------------------------------

TABS	macro	line
	if ALLOW_TAB_ITEMS
line
	endif
endm

SBOX	macro	line
	if SELECTION_BOX
line
	endif
endm
