void
FFDGetFieldBounds(optr oself, FieldID fieldNum, RectDWord *fieldBounds)
{
    optr fieldOptr;

    /*
     * Get the field from the current layout.
     */
    fieldOptr = FFDGetFieldTextGrObject(oself, fieldNum);

