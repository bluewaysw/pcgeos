Boolean _pascal _export WordMatcherCEntry(LibraryCallType ty, GeodeHandle client)
{
    if ( LCT_ATTACH == ty )
    {
        currentMemBlock = NullHandle;
    }
    else if ( LCT_CLIENT_EXIT == ty )
    {
        if ( NullHandle != currentMemBlock )
        {
