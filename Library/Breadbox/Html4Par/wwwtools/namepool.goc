	   it doesn't occur at critical times */
	bufH = MemAlloc((tokLength + strLength + 1)*sizeof(TCHAR), HF_DYNAMIC, HAF_STANDARD);
	if (bufH) {
	    bufP = MemLock(bufH);
	}
    }
    if (bufP) {
