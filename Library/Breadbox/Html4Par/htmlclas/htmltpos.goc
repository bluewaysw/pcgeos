    file = FileCreate(_TEXT("htmltext.txt"), FILE_CREATE_NO_TRUNCATE|FCF_NATIVE|(FILE_DENY_NONE|FILE_ACCESS_W), FILE_ATTR_NORMAL) ;
    FilePos(file, 0, FILE_POS_END);

