{
    FileHandle file ;
    word i;

    file = OpenLayoutLog() ;
    fputs("------------------------------------------------------------------\n", file) ;
    fprintf(file, "%s [%d]\n", comment, id) ;
    fputs("   MIN:  MAX:  PRO:  PER:  PIX:\n", file) ;
    for (i=0; i<num; i++, p_sizing++)  {
