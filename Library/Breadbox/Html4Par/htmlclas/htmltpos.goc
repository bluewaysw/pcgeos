{
    FileHandle file ;

    file = OpenLayoutLog() ;
    fputs("\n\n\n+-----------------------------------------------------------\n", file) ;
    fprintf(file, "| HTMLText Dump:  %s\n", comment) ;
    fputs("+-----------------------------------------------------------\n", file) ;
    if (file)  {
