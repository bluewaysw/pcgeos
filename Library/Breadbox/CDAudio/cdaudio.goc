GeodeHandle      cdDriverHandle  = 0;


void CallCDDriver (void)
{
  DriverInfoStruct * driverInfo;
  int segm;
  int offs;
  PUSHALL;
  driverInfo = GeodeInfoDriver(cdDriverHandle);
  segm = FP_SEG(driverInfo) ;
  offs = FP_OFF(driverInfo) ;
  POPALL;
}


word _pascal  MSCDEX_Get_Version (void)
/* returns MSCDEX_Version, major in high, minor in low byte; 0= not installed */
{
  word back;
  PUSHDS;
  GeodeLoadDGroup( GeodeGetCodeProcessHandle() );
  if (MSCDEX_Version==0) {
#if 0
    asm {
      push di
      mov  di,8         /* get number of drives */
      } CallCDDriver(); asm {
      pop  di
      mov  MSCDEX_CD_Drives,al
    }
#endif
    if (MSCDEX_CD_Drives !=0) {
      int segm = FP_SEG(MSCDEX_Drive_Letters) ;
      int offs = FP_OFF(MSCDEX_Drive_Letters) ;
#if 0
      asm {
        push di
        mov  di, 10          /* get MSCDEX version number */
        } CallCDDriver(); asm {
        mov  MSCDEX_Version,ax
        mov  ax, segm
        mov  bx, offs
        mov  di, 12          /* get CD drive letters */
        } CallCDDriver(); asm {
        pop  di
      }
#endif
      MSCDEX_Drive_Letters[MSCDEX_CD_Drives]=0;
    }
  }
  if (MSCDEX_Version < 0x0201)
    cdDemoMode = 1;
  else
    cdDemoMode = 0;
  back = MSCDEX_Version ;
  POPDS;
  return back;
}


byte _pascal  MSCDEX_Get_Drives (void)
/* returns number of CD drives installed */
{
  byte back;
  PUSHDS;
  GeodeLoadDGroup( GeodeGetCodeProcessHandle() );
  if (MSCDEX_Version == 0)
    MSCDEX_Get_Version();
  if (cdDemoMode)
    back = 1;
  else
    back = MSCDEX_CD_Drives;
  POPDS;
  return back;
}


byte _pascal  MSCDEX_Get_Drive_Letter (byte drive)
/* returns drive letter (A=0) of cdrom #drive */
{
  byte back;
  PUSHDS;
  GeodeLoadDGroup( GeodeGetCodeProcessHandle() );
  if (MSCDEX_Version == 0)
    MSCDEX_Get_Version();
  if (cdDemoMode||(drive>=MSCDEX_Get_Drives()))
    back =  0;
  else
    back = MSCDEX_Drive_Letters[drive];
  POPDS;
  return back;
}


