    GVLI_increment = MakeWWFixed(1);
    GVLI_value = MakeWWFixed(192);
    GVLI_displayFormat = GVDF_INTEGER;

    HINT_EXPAND_WIDTH_TO_FIT_PARENT;
}

@object GenInteractionClass PngAlphaMaskBox = {
