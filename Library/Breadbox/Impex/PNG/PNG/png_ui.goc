@method PngImportGroupClass, MSG_VIS_OPEN
{
    ColorAndFlagReturn   cafr;

    @callsuper();

    pself->pngAlphaTransform.method = @call @dup(@PngAlphaMethodGroup)::MSG_GEN_ITEM_GROUP_GET_SELECTION();
    pself->pngAlphaTransform.alphaThreshold = (byte) @call @dup(@PngAlphaThresholdValue)::MSG_GEN_VALUE_GET_INTEGER_VALUE();
    @call @dup(@PngAlphaBlendColor)::MSG_COLOR_SELECTOR_GET_COLOR(&cafr);

    // convert INDEX to RGB
    if(cafr.CAFR_color.CQ_info == CF_INDEX)
    {
        RGBColorAsDWord c = GrMapColorIndex(0, cafr.CAFR_color.CQ_redOrIndex);
        pself->pngAlphaTransform.blendColor.RGB_red = RGB_RED(c);
        pself->pngAlphaTransform.blendColor.RGB_green = RGB_GREEN(c);
        pself->pngAlphaTransform.blendColor.RGB_blue = RGB_BLUE(c);
    }
    else if (cafr.CAFR_color.CQ_info == CF_RGB)
    {
        pself->pngAlphaTransform.blendColor.RGB_red = cafr.CAFR_color.CQ_redOrIndex;
        pself->pngAlphaTransform.blendColor.RGB_green = cafr.CAFR_color.CQ_green;
        pself->pngAlphaTransform.blendColor.RGB_blue = cafr.CAFR_color.CQ_blue;
    }
    else if (cafr.CAFR_color.CQ_info == CF_GRAY)
    {
        pself->pngAlphaTransform.blendColor.RGB_red = cafr.CAFR_color.CQ_redOrIndex;
        pself->pngAlphaTransform.blendColor.RGB_green = cafr.CAFR_color.CQ_redOrIndex;
        pself->pngAlphaTransform.blendColor.RGB_blue = cafr.CAFR_color.CQ_redOrIndex;
    }
}

@method PngImportGroupClass, MSG_PNG_ALPHA_METHOD_SELECTED
{
    if (selection == GIGS_NONE)
    {
        @call @dup(@PngAlphaBlendBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
        @call @dup(@PngAlphaMaskBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
    }
    else if (selection == 1)
    {
        @call @dup(@PngAlphaBlendBox)::MSG_GEN_SET_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
        @call @dup(@PngAlphaMaskBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
    }
    else
    {
        @call @dup(@PngAlphaMaskBox)::MSG_GEN_SET_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
        @call @dup(@PngAlphaBlendBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
    }
}

@method PngImportGroupClass, MSG_RESET_PNG_IMPORT_DIALOG
{
    ColorQuad   defaultBlendColor = {C_WHITE, CF_INDEX, 0, 0};

    @call @dup(@PngAlphaMethodGroup)::MSG_GEN_ITEM_GROUP_SET_SINGLE_SELECTION(PNG_AT_BLEND, FALSE);
    @call @dup(@PngAlphaBlendColor)::MSG_COLOR_SELECTOR_SET_COLOR(defaultBlendColor, FALSE);
    @call @dup(@PngAlphaThresholdValue)::MSG_GEN_VALUE_SET_INTEGER_VALUE(192, FALSE);

    @call @dup(@PngAlphaBlendBox)::MSG_GEN_SET_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
    @call @dup(@PngAlphaMaskBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
}

@method PngImportGroupClass, MSG_DISMISS_PNG_IMPORT_DIALOG
{
    ColorQuad   orginalBlendColor = {C_WHITE, CF_INDEX, 0, 0};

    orginalBlendColor.CQ_info = CF_RGB;
    orginalBlendColor.CQ_redOrIndex = pself->pngAlphaTransform.blendColor.RGB_red;
    orginalBlendColor.CQ_green = pself->pngAlphaTransform.blendColor.RGB_green;
    orginalBlendColor.CQ_blue = pself->pngAlphaTransform.blendColor.RGB_blue;

    @call @dup(@PngAlphaMethodGroup)::MSG_GEN_ITEM_GROUP_SET_SINGLE_SELECTION(pself->pngAlphaTransform.method, FALSE);
    @call @dup(@PngAlphaBlendColor)::MSG_COLOR_SELECTOR_SET_COLOR(orginalBlendColor, FALSE);
    @call @dup(@PngAlphaThresholdValue)::MSG_GEN_VALUE_SET_INTEGER_VALUE(pself->pngAlphaTransform.alphaThreshold , FALSE);

    if (pself->pngAlphaTransform.method == PNG_AT_BLEND)
    {
        @call @dup(@PngAlphaBlendBox)::MSG_GEN_SET_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
        @call @dup(@PngAlphaMaskBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
    }
    else
    {
        @call @dup(@PngAlphaMaskBox)::MSG_GEN_SET_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
        @call @dup(@PngAlphaBlendBox)::MSG_GEN_SET_NOT_USABLE(VUM_DELAYED_VIA_UI_QUEUE);
    }
}
