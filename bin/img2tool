#!/bin/bash

# set some variables
inf=$1
basef=$inf
basef="${basef%.*}"
outf="$basef".pcx
gohf="$basef".goh

# convert any modern image to old-school pcx
img2pcx $inf

# make sure we have the correct dimensions
convert $outf -gravity center -crop 15x15+0+0 +repage $outf
echo -n "Cropped: "; identify $outf;

# call the CVTPCX methusalem
cvtpcx -G -2 -m0 -Stool -w15 -h15 -n"$basef"00 -o"$gohf" $outf
