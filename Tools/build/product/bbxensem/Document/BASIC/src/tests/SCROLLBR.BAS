sub updatePos()
	label2.left = scrollbar1.value
end sub

sub toggle1_changed(self as toggle)
	scrollbar1.visible = 0
	scrollbar1.notifyDrag = self.status
	scrollbar1.visible = 1
end sub

sub scrollbar1_thumbMoved(self as scrollbar)
	label1.caption = "thumbMoved"
	updatePos()
end sub

sub scrollbar1_changed(self as scrollbar, scrollType as integer)
    const ST_DRAG      1
    const ST_DECREMENT 2
    const ST_INCREMENT 3
    const ST_PAGE_UP   4
    const ST_PAGE_DOWN 5

    select case scrollType
	case ST_PAGE_UP
	   label1.caption = "pageUpClicked"
	case ST_PAGE_DOWN
	   label1.caption = "pageDownClicked"
	case ST_DECREMENT
	   label1.caption = "downArrowClicked"
	case ST_INCREMENT
	   label1.caption = "upArrowClicked"
    end select
    updatePos()

end sub

